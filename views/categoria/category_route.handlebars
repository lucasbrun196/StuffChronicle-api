<h1>{{categoria.nome}}</h1>
{{#each postagens}}
<div class="card">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}} <a href="/postagem/{{slug}}">leia mais</a></p>
        <hr>
        <small>{{categoria.nome}}</small><br>
        <small>{{data}}</small>
    </div>
</div>

{{else}}
<h5>Nenhuma postagem</h5>
{{/each}}
